<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:layout_marginTop="@dimen/_30dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_doctorStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_1dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="start"
            android:text="Patient's Booking"
            android:textColor="@color/colorBlue"
            android:textSize="18dp" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_PatientBookin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_patientAccuntYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin18"
            android:layout_marginTop="@dimen/_25dp"
            android:fontFamily="@font/robotoregular"
            android:text="Enter Patient's Mobile"
            android:textColor="@color/colorGray" />


        <LinearLayout
            android:id="@+id/ll_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginRight="@dimen/_10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:layout_width="@dimen/margin110"
                android:layout_height="@dimen/margin50"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:src="@drawable/mobile"
                android:textSize="17dp" />


            <EditText
                android:id="@+id/et_contect_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center"
                android:inputType="number"
                android:maxLength="10"
                android:layout_marginLeft="@dimen/_1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshap"
                android:paddingLeft="@dimen/_5dp"
                android:textColor="@color/colorGray"
                android:textSize="13dp" />

        </LinearLayout>


        <RadioButton
            android:id="@+id/rb_patientAccuntNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin18"
            android:layout_marginTop="@dimen/_20dp"
            android:fontFamily="@font/robotoregular"
            android:text="Don't have mobile number"
            android:textColor="@color/colorGray" />

    </RadioGroup>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/margin50"
        android:background="@drawable/button"
        android:padding="@dimen/margin14"
        android:text="CONTINUE"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/margin15" />

</LinearLayout>